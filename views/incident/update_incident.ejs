<html lang="en">

<%- include("../partials/head.ejs") %>


    <body>

        <div class="main-content">
            <div class="header">
                <div>Incidents</div>
            </div>
            <div class="block-content">
                <div class="create-person content">
                    <div class="create-person-title">
                        <div class="w3-container w3-theme">
                            <h3>Изменить Инцидент</h3>
                        </div>
                    </div>
                    <form action="/blogs" method="POST" class="form-person" id="form-person">
                        <label for="registration_date">Дата Регистрации</label>
                        <input type="date" id="registration_date" name="registration_date" required value ="<%=date%>">

                        <label for="description">Описание(фабула)</label>
                        <input type="text" id="description" name="description" required value="<%=description%>">

                        <label for="list-items-select">Принятое Решение</label>
                        

                        <select class="list-items-select" form="form-person" name="resolution_result" id="resolution_result" >
                            <option value="Удовлетворено ходотайство об возбуждении уголовного дела."<%=first_resolution%>>
                                Удовлетворено ходотайство об возбуждении уголовного дела.
                            </option>
                            <option value="Отказано в возбуждении дела." <%=second_resolution%>>
                                Отказано в возбуждении дела.
                            </option>
                            <option value="Отправлено по территориальному признаку." <%=third_resolution%>>
                                Отправлено по территориальному признаку.
                            </option>
                        </select>
                        <label for="case-number">Регистрационный номер заведенного дела</label>
                        <input type="text" id="case-number" name="case_number"value="<%=case_number%>">

                       

                        <button class="form-button"> Изменить</button>
                    </form>
                </div>
                <div></div>
                <%- include("../partials/search_list.ejs",{title:'Люди'}) %>
            </div>
            <div class="footer">
                <%- include("../partials/footer.ejs") %>
            </div>

        </div>
    </body>

</html>